				<a class="nav-link" href="/main/logout" id="logout">Logout</a>
			</li>
		</ul>
	</div>
</div>
</nav>

<!-- Page Content -->
<div class="container">
	<div class="row">
		<div class="col-lg-3">

			<h4 class="my-4"><b><%= authid %></b>님<br>환영합니다</h4>
			<div class="list-group">
				<a href="/main" class="list-group-item">SHOP</a>
				<a href="#" class="list-group-item">BASKET</a>
				<a href="#" class="list-group-item">MY INFO</a>
			</div>

		</div>
		<!-- /.col-lg-3 -->

		<div class="col-lg-9">


			<div class="row">


			</div>
			<div class="row">
				<%
				for(var i=0;i<rows.length;i++){
				var item = rows[i];
				%>
				<div class="col-lg-12 col-md-12 mb-12">
					<form action="/main/write" method="post" enctype="multipart/form-data" onsubmit="return check()">
						<div class="card h-100">
							<a href="#"><img class="card-img-top" src='<%=item.img%>' alt=""></a>
							<div class="card-body">
								<h4 class="card-title">
									<b>상품 등록</b>
								</h4>
								<hr>
								<h5></h5>
								<p class="card-text">
									<div  class="table-responsive" >
										<table style="width:100%" class="table table-striped">
											<tr class="active">
												<td><b>상품명</b></td>
											</tr>

											<tr>
												<td><input type="text" id="name" name="name"/></td>
											</tr>
											<tr>
												<td><b>브랜드명</b></td>
											</tr>
											<tr> 
												<td><input type="text" id="brandname" name="brandname" /></td>
											</tr>
											<tr>
												<td><b>가격</b></td>
											</tr>
											<tr> 
												<td><input type="text" id="price" name="price" />원</td>
											</tr>
											<tr>
												<td><b>상세정보</b></td>
											</tr>
											<tr>
												<td><textarea id="information" name="information" style="width:80%"></textarea></td>
											</tr>
											<tr>
												<td><b>이미지</b></td>		
											</tr>
											<tr>
												<td><input type="file" name="file" id="file" /></td>
											</tr>

										</table>
									</div>
								</p>
							</div>
							<div class="card-footer">
								<small class="text-muted"><button type="submit">등록</button></small>
							</div>
						</div>
					</form>
				</div>

				<% 
			}
			%>

		</div>
		<!-- /.row -->

	</div>
	<!-- /.col-lg-9 -->

</div>
<!-- /.row -->

</div>
<!-- /.container -->

<!-- Footer -->
<footer class="py-5 bg-dark">
	<div class="container">
		<p class="m-0 text-center text-white">Copyright &copy; WATCH SHOP</p>
	</div>
	<!-- /.container -->
</footer>

<!-- Bootstrap core JavaScript -->
<script src="/javascripts/jquery-3.3.1.min.js"></script>
<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
<script>
	function check(){
		if($("#name").val().trim() ==""){
			var message ="상품명을 입력하세요";
			$("#name").val("");
			$("#name").focus();
			alert(message);
			return false;
		}
		if($("#brandname").val().trim() ==""){
			var message ="브랜드명을 입력하세요";
			$("#brandname").val("");
			$("#brandname").focus();
			alert(message);
			return false;
		}
		if($("#price").val().trim() ==""){
			var message ="가격을 입력하세요";
			$("#price").val("");
			$("#price").focus();
			alert(message);
			return false;
		}
		if($("#information").val().trim() ==""){
			var message ="상품 정보를 입력하세요";
			$("#information").val("");
			$("#information").focus();
			alert(message);
			return false;
		}
		if($("#file").val().trim() ==""){
			var message ="사진을 넣어주세요";
			alert(message);
			return false;
		}
	}
</script>


</body>

</html>
